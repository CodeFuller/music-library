<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <ImportGroup Label="Properties">
    <Import Project="..\..\MusicLibrary.props" />
  </ImportGroup>

  <PropertyGroup>
    <Version>2.0.0</Version>
    <OutputType>WinExe</OutputType>
    <TargetFramework>$(TargetAppFramework)</TargetFramework>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Views\Icons\PandaPlayer.ico</ApplicationIcon>
    <AssemblyName>PandaPlayer</AssemblyName>
  </PropertyGroup>

  <PropertyGroup>
    <CodeAnalysisRuleSet>..\..\MusicLibrary.Sources.ruleset</CodeAnalysisRuleSet>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CF.Library.Wpf" Version="$(CFLibraryVersion)" />
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.0.8" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="$(FxCopAnalyzersVersion)" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.19" />
    <PackageReference Include="StyleCop.Analyzers" Version="$(StyleCopAnalyzersVersion)" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MusicLibrary.Common\MusicLibrary.Common.csproj" />
    <ProjectReference Include="..\MusicLibrary.Dal.LocalDb\MusicLibrary.Dal.LocalDb.csproj" />
    <ProjectReference Include="..\MusicLibrary.Dal\MusicLibrary.Dal.csproj" />
    <ProjectReference Include="..\MusicLibrary.LastFM\MusicLibrary.LastFM.csproj" />
    <ProjectReference Include="..\MusicLibrary.Library\MusicLibrary.Library.csproj" />
    <ProjectReference Include="..\MusicLibrary.Logic\MusicLibrary.Logic.csproj" />
    <ProjectReference Include="..\MusicLibrary.Tagger\MusicLibrary.Tagger.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Views\Icons\PandaPlayer.ico">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Views\Icons\*.*" />
    <Resource Include="Views\Icons\Ratings\*.*" />
  </ItemGroup>

  <ItemGroup>
    <None Update="conf/**">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <PropertyGroup>
    <NoWarn>NU1701</NoWarn>
  </PropertyGroup>

</Project>
