<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:MusicLibrary.PandaPlayer.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style TargetType="{x:Type views:MultiSelectionDataGrid}" BasedOn="{StaticResource MaterialDesignDataGrid}" />

    <Style x:Key="MaterialDesignDataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="{x:Type DataGridColumnHeader}">
        <Setter Property="materialDesign:DataGridAssist.ColumnHeaderPadding" Value="10,4,10,4" />
    </Style>

    <Style x:Key="MaterialDesignDataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="{x:Type DataGridCell}">
        <Setter Property="materialDesign:DataGridAssist.CellPadding" Value="1" />
    </Style>

</ResourceDictionary>
