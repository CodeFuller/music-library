<Project Sdk="Microsoft.NET.Sdk">

  <ImportGroup Label="Properties">
    <Import Project="..\..\MusicLibrary.props" />
  </ImportGroup>

  <PropertyGroup>
    <Version>2.0.0</Version>
    <OutputType>Exe</OutputType>
    <TargetFramework>$(TargetAppFramework)</TargetFramework>
    <AssemblyName>LibraryChecker</AssemblyName>
  </PropertyGroup>

  <PropertyGroup>
    <Description>Utility for checking consistency of Music library content</Description>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
  </PropertyGroup>

  <PropertyGroup>
    <CodeAnalysisRuleSet>..\..\MusicLibrary.Sources.ruleset</CodeAnalysisRuleSet>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CF.Library.Core" Version="$(CFLibraryVersion)" />
    <PackageReference Include="CF.Library.Bootstrap" Version="$(CFLibraryVersion)" />
    <PackageReference Include="CF.Library.Logging" Version="$(CFLibraryVersion)" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="$(FxCopAnalyzersVersion)" PrivateAssets="all" />
    <PackageReference Include="NDesk.Options" Version="0.2.1" />
    <PackageReference Include="StyleCop.Analyzers" Version="$(StyleCopAnalyzersVersion)" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\GlobalAssemblyInfo.cs" Link="GlobalAssemblyInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MusicLibrary.Common\MusicLibrary.Common.csproj" />
    <ProjectReference Include="..\MusicLibrary.Dal\MusicLibrary.Dal.csproj" />
    <ProjectReference Include="..\MusicLibrary.LastFM\MusicLibrary.LastFM.csproj" />
    <ProjectReference Include="..\MusicLibrary.Library\MusicLibrary.Library.csproj" />
    <ProjectReference Include="..\MusicLibrary.Tagger\MusicLibrary.Tagger.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="conf/**">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <Content Include="..\DiscToAlbumMappings.json" Link="conf/DiscToAlbumMappings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <PropertyGroup>
    <NoWarn>NU1701</NoWarn>
  </PropertyGroup>

</Project>
